{
  "name": "simple-app",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "pack": "webpack --config webpack/webpack.config.dev.js",
    "pack:prod": "webpack --config webpack/webpack.config.prod.js",
    "babel": "babel src -d views",
    "build": "npm run pack && npm run babel",
    "build:prod": "NODE_ENV=production npm run pack:prod && npm run babel",
    "prettier-watch": "onchange '**/*.js' -- prettier --write {{changed}}",
    "limit": "npm run build && size-limit --why"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "size-limit": [
    {
      "path": "./dist/*"
    }
  ],
  "author": "DisaPadla",
  "license": "ISC",
  "dependencies": {
    "@babel/polyfill": "^7.0.0",
    "express": "^4.16.4",
    "firebase": "^5.3.1",
    "react": "^16.7.0-alpha.0",
    "react-beautiful-dnd": "^9.0.2",
    "react-dom": "^16.7.0-alpha.0",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "styled-components": "^4.0.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.4",
    "babel-plugin-styled-components": "^1.8.0",
    "clean-webpack-plugin": "^0.1.19",
    "css-loader": "^1.0.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.0.0-rc.13",
    "lint-staged": "^7.2.0",
    "prettier": "1.14.0",
    "size-limit": "^0.19.2",
    "style-loader": "^0.21.0",
    "uglifyjs-webpack-plugin": "^1.3.0",
    "webpack": "^4.16.4",
    "webpack-bundle-analyzer": "^2.13.1",
    "webpack-cli": "^3.1.0",
    "webpack-dev-middleware": "^3.4.0",
    "webpack-dev-server": "^3.1.5",
    "webpack-hot-middleware": "^2.24.3"
  }
}
